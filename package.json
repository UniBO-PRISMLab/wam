{
  "name": "@arces-wot/wam",
  "version": "0.1.6",
  "description": "Web of Thing Application Development Enviroment",
  "main": "./dist/src/wam.js",
  "bin": {
    "wam": "./dist/src/wam.js"
  },
  "repository": {
    "url": "https://github.com/arces-wot/wam",
    "type": "git"
  },
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "./node_modules/.bin/tsc -p .",
    "postbuild": "copyfiles \"./templates/**\" ./dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:fix": "pretty-quick --staged",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "precommit": "run-s format:fix lint",
    "start": "ts-node src/wam.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "WoT",
    "IoT",
    "CLI",
    "dev",
    "tools"
  ],
  "author": "Cristiano Aguzzi <cristiano.aguzzi@unibo.it>",
  "contributors": [
    "Lorenzo Gigli <lorenzo.gigli@studio.unibo.it>"
  ],
  "license": "MIT",
  "dependencies": {
    "@rollup/plugin-json": "^4.0.0",
    "@rollup/plugin-typescript": "^2.0.1",
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "commander": "^3.0.2",
    "figlet": "^1.2.4",
    "fs-extra": "^8.1.0",
    "handlebars": "^4.4.5",
    "inquirer": "^7.0.0",
    "npm": "^6.13.4",
    "path": "^0.12.7",
    "rollup": "^1.26.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "typescript": "^3.6.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^12.12.21",
    "@types/npm": "^2.0.31",
    "@types/rollup": "^0.54.0",
    "copyfiles": "^2.1.1",
    "husky": "^3.0.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0"
  }
}
